<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/consumedFoodName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Food/Dish Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editButton"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/consumedFoodQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Quantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/consumedFoodName"
        app:layout_constraintEnd_toStartOf="@+id/editButton"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/consumedFoodCalories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Calories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/consumedFoodQuantity"
        app:layout_constraintEnd_toStartOf="@+id/editButton"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        app:layout_constraintEnd_toStartOf="@+id/deleteButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>